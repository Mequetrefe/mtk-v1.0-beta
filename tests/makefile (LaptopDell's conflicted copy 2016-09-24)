# Makefile for the TESTS folder.

include ../makefile_inc

all: mtk_1d_div_test mtk_1d_grad_test mtk_1d_lap_test mtk_dense_matrix_test mtk_2d_div_test  mtk_2d_grad_test mtk_2d_lap_test mtk_1d_grid_test mtk_2d_grid_test mtk_2d_bc_desc_test

EXE = \
	mtk_1d_div_test mtk_1d_grad_test mtk_1d_lap_test mtk_dense_matrix_test mtk_2d_div_test mtk_2d_grad_test mtk_2d_lap_test mtk_1d_grid_test mtk_2d_grid_test mtk_2d_bc_desc_test
	

# Compiling statements:

%.o: %.cc $(INCLUDE)/mtk.h
	$(CC) $(CCFLAGS) $<

# Linking statements:

mtk_1d_div_test: mtk_1d_div_test.o mtk_1d_div_test.cc
	$(LINKER) mtk_1d_div_test.o $(LIBS) -o mtk_1d_div_test
	@echo ' '

mtk_1d_grad_test: mtk_1d_grad_test.o mtk_1d_grad_test.cc
	$(LINKER) mtk_1d_grad_test.o $(LIBS) -o mtk_1d_grad_test
	@echo ' '

mtk_1d_lap_test: mtk_1d_lap_test.o mtk_1d_lap_test.cc
	$(LINKER) mtk_1d_lap_test.o $(LIBS) -o mtk_1d_lap_test
	@echo ' '
mtk_dense_matrix_test: mtk_dense_matrix_test.o mtk_dense_matrix_test.cc
	$(LINKER) mtk_dense_matrix_test.o $(LIBS) -o mtk_dense_matrix_test
	@echo ' '
mtk_2d_div_test: mtk_2d_div_test.o mtk_2d_div_test.cc
	$(LINKER) mtk_2d_div_test.o $(LIBS) -o mtk_2d_div_test
	@echo ' '
mtk_2d_grad_test: mtk_2d_grad_test.o mtk_2d_grad_test.cc
	$(LINKER) mtk_2d_grad_test.o $(LIBS) -o mtk_2d_grad_test
	@echo ' '
mtk_2d_lap_test: mtk_2d_lap_test.o mtk_2d_lap_test.cc
	$(LINKER) mtk_2d_lap_test.o $(LIBS) -o mtk_2d_lap_test
	@echo ' '
mtk_1d_grid_test: mtk_1d_grid_test.o mtk_1d_grid_test.cc
	$(LINKER) mtk_1d_grid_test.o $(LIBS) -o mtk_1d_grid_test
	@echo ' '

mtk_2d_grid_test: mtk_2d_grid_test.o mtk_2d_grid_test.cc
	$(LINKER) mtk_2d_grid_test.o $(LIBS) -o mtk_2d_grid_test
	@echo ' '
mtk_2d_bc_desc_test: mtk_2d_bc_desc_test.o mtk_2d_bc_desc_test.cc
	$(LINKER) mtk_2d_bc_desc_test.o $(LIBS) -o mtk_2d_bc_desc_test
	@echo ' '
clean:
	rm -f *~ *.o $(EXE)
